
<% if params[:single] %>
	<% case params[:tab] %>
	<% when "4" then %>
		$('#tab-content_up').html("<%= j render partial: 'slider', locals: { event: @event, action_page: 'show'} %>");
	<% when "5" then %>
		$('#tab-content_up').html("<%= j render partial: 'video', locals: { event: @event, action_page: 'show'} %>");
	<% when "6" then %>
		$('#tab-content_up').html("<%= j render partial: 'graph', locals: { event: @event} %>");	
	<% when "7" then %>
		$('#tab-content_up').html("<%= j render partial: 'street', locals: { event: @event} %>");
	<% else %>
			$('#tab-content').html("<%= j render partial: 'slider', locals: { event: @event, action_page: 'show'} %>");
	<% end %>
<% else %>
	<% case params[:tab] %>
	<% when "1" then %>
		$('#tab-content').html("<%= j render partial: 'map', locals: {events: @events} %>");
	<% when "2" then %>
		$('#tab-content').html("<%= j render partial: 'grid', locals: {events: @events} %>");
	<% when "3" then %>
		$('#tab-content').html("<%= j render partial: 'list', locals: {events: @events} %>");
	<% when "4" then %>
		$('#tab-content_up').html("<%= j render partial: 'picture_container', locals: { events_pictures: @events_pictures} %>");
	<% when "5" then %>
		$('#tab-content_up').html("<%= j render partial: 'video_container', locals: { events_videos: @events_videos} %>");
	<% when "6" then %>
		$('#tab-content_up').html("<%= j render partial: 'map_container', locals: {events: @events} %>");	
	<% when "7" then %>
		$('#tab-content_up').html("<%= j render partial: 'street_container', locals: {events: @events} %>");
	<% else %>
			$('#tab-content').html("<%= j render partial: 'map', locals: {events: @events} %>");
	<% end %>
<% end %>
