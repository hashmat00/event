<% if events.present? %>
  <% events.each_with_index do |event, index| %>
    <% if index == "0" %><div class="item active"><% else %> <div class="item"><% end %> 
      <div id="googleMap_<%= event.id %>" style="width:100%; height:350px;"></div>
       <script>
        function initMap() {
          var myLatLng = {lat: <%= event.latitude %>, lng: <%= event.longitude %>};

          var map = new google.maps.Map(document.getElementById('googleMap_<%= event.id %>'), {
            zoom: 14,
            center: myLatLng
          });

          var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            title: 'Hello World!'
          });
        }
      </script>
    </div>
  <% end %>
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDl8KUzAOcfadtLw7_wkJ_NyoD5vDz3_74&callback=initMap">
  </script>
<% end %>