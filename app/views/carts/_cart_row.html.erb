<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= ticket.name %></h4>
    </div>
    <div class="col-xs-4">
      
      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency order_item.unit_price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :ticket_id, value: ticket.id %>
          </div>
          <div class="col-xs-5">
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the ticket '#{order_item.ticket.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
          <div class="col-xs-3">
            <% url = "http://" + (request.subdomain.present? ? (request.subdomain+".") : "") + request.domain + ((request.port.present? && Rails.env.development?) ? (":#{request.port}") : "")+"/events/#{order_item.try(:event).try(:id)}"+"?response=true&order_item_id=#{order_item.id}&user_id=#{current_user.try(:id)}" %>
              <%= link_to "Checkout", @order_items.paypal_url(url, (number_to_currency order_item.total_price), (order_item.try(:event).try(:id)), (order_item.try(:ticket).try(:id)), order_item.quantity.to_i), class: "btn btn-primary" %>

          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency order_item.total_price %></span></h4>
      <% end %>
    </div>
    
  </div>
</div>