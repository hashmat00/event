
<%= form_for ticket.subscription.payment, method: :put, html: {id: "order_form"}, remote: true do |f| %>
<div class="text-con">
  <div class="text-block">
    <p>Edit Contact Information</p>
  </div>
  <%= f.hidden_field :id, value: ticket.subscription.id %>
  <%= f.hidden_field :ticket_history_id, value: ticket.id %>
  
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">First Name *</label>
      <div class="col-sm-10">
        <%= f.text_field :first_name, required: true, class: "form-control", placeholder: "Enter First Name" %>
        <!-- <input type="email" class="form-control" id="email" placeholder=""> -->
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Last Name *</label>
      <div class="col-sm-10">          
        <%= f.text_field :last_name, required: true, class: "form-control", placeholder: "Enter First Name" %>
        <!-- <input type="password" class="form-control" id="pwd" placeholder="Enter password"> -->
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Email *</label>
      <div class="col-sm-10">          
        <%= f.email_field :email, required: true, class: "form-control", placeholder: "Enter First Email" %>
        <!-- <input type="password" class="form-control" id="pwd" placeholder="Enter password"> -->
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Contact *</label>
      <div class="col-sm-10">          
        <%= f.text_field :contact_no, required: true, class: "form-control", placeholder: "Enter COntact No" %>
        <!-- <input type="password" class="form-control" id="pwd" placeholder="Enter password"> -->
      </div>
    </div>
  <div class="cancel-btn inline-block">
  <button type="button" class="btn btn-danger btn-lg" onclick="$('#ticket_user_form').hide();$('#ticket_user_details').show();">
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel
  </button>
  </div>
  <div class="update-btn inline-block">
   <%= f.submit "Update", class:"btn btn-info btn-lg" %>
  </div>
</div>

<% end %>

  <script>
$(document).ready(function() {
    $('#order_form').formValidation({
        framework: 'bootstrap',
        icon: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
            'payment[first_name]': {
                validators: {
                    notEmpty: {
                        message: 'The first name is required'
                    }
                }
            },
            'payment[last_name]': {
                validators: {
                    notEmpty: {
                        message: 'The last name is required'
                    }
                }
            },
            'payment[email]': {
                validators: {
                    notEmpty: {
                        message: 'The email address is required'
                    },
                    emailAddress: {
                        message: 'The input is not a valid email address'
                    }
                }
            }
        }
    });

});
</script>