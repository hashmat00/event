<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="col-md-3 left-con">
      <div id="avatarImage_<%= @user.id %>">
        <%= render partial: "avatar_image", locals: {user: @user}  %>
      </div>
      <div class="center marg">
        <%= form_for @user, remote: true, html: {multipart: true} do |f| %>
          <%= f.file_field :image %>
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="image_change" value="true">
          <%= f.submit "Change Image", class: "btn btn-primary"  %>
        <% end %>
        <!-- <button class="btn btn-primary">Change Image</button> -->
      </div>
      <div class="row"><button class="btn btn-primary btn-block" onclick="tabRequest(1);">View Profile</button></div>
      <div class="row"><button class="btn btn-primary btn-block" onclick="tabRequest(2);">Edit Profile</button></div>
      <div class="row"><button class="btn btn-primary btn-block" onclick="tabRequest(3);">Account Settings</button></div>
      <div class="row"><button class="btn btn-primary btn-block" onclick="tabRequest(4);">Delete Account</button></div>
      <div class="row"><button class="btn btn-primary btn-block" onclick="tabRequest(5);">Purchase Report</button></div>
    </div>
    <div class="col-md-9">
      <div class="userShow" id="userShow_<%= @user.id %>">
        <%= render partial: "user_profile_details", locals: {user: @user} %>
        <%#= render partial: "edit_profile"%>
    </div>
  </div>  

  <div class="col-md-1"></div>
</div>
</br>
<div class="row">
    
</div>

<!--display title from partials page-->
<h2 class="chef-text-showpage"><%= @user.username %></h2> 
<hr>


<!--display chefs recipe listings-->
<div class="container">
 <% @events.each do |x| %>
        <div class="col-md-4 m-b-lg">
          <div class="panel panel-default panel-profile m-b-0">
                <%= image_tag(x.picture.url, class: "panel-recipe") if x.picture? %>
                
            <div class="panel-body text-center">
                <section class="panel-profile-recipe-img">
              <%= link_to (image_tag (x.user.image), class: "gravatar", width: "40", height: "40"), user_path(x.user) %>
              
              </section>
              
              <h4><%= link_to x.name, event_path(x) %></h4>
              <h2 class="quiet"><%#= x.summary.split[0..4].join(" ") %></h2>
              
                  <div class>
                        <span class="icon icon-add-user"></span> <%= link_to 'View Event', event_path(x), class: "btn btn-success btn-small" %>
                        <span class="icon icon-add-user"></span> <%= link_to 'View Reports', "/users/reports?event_id=#{x.id}", class: "btn btn-success btn-small" %>
                    </div> 
                    
                <div class="thumbs">
                    <%= link_to like_event_path(x, like: true), method: :post do %>
                    <i class="white glyphicon glyphicon-thumbs-up">&nbsp<%= x.thumbs_up_total %></i>
                    <% end %> &nbsp&nbsp&nbsp&nbsp
                    <%= link_to like_event_path(x, like: false), method: :post do %>
                    <i class="white glyphicon glyphicon-thumbs-down">&nbsp<%= x.thumbs_down_total %></i>
                    <% end %>
                    
                </div> 
                </br>
                
                <div class="ingredient pull-left">
                <p style="color: #777">Category: <%= render x.categories %></p>
                </div>
                    
              
              
            </div>
          </div>
        </div>
                    
                 
            
     <% end %>
     
     <!--pagination on bttom -->
      <div class="row">
        <div class="col-md-4 col-md-offset-4 center">
        <%= will_paginate @events %>
        </div>
      </div>
    
    	    
            
</div>



<style type="text/css">
  .marg
  {
    margin: 10px 0px;
  }
  .left-con
  {
    border: solid 2px black;
  }
</style>

<script type="text/javascript">
  function tabRequest(id){
    $.ajax({
      type:'GET',
      url: '/users/tabs',
      dataType: 'script',
      data: $.param({ tab: id, id: <%= @user.id %>})
    });
  };
</script>