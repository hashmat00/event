  </div>
  
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">First Name</label>
      <div class="col-sm-10">
        <p><%= ticket.order.try(:first_name).try(:titleize) %></p>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Last Name</label>
      <div class="col-sm-10">          
        <p><%= ticket.order.try(:last_name).try(:titleize) %></p>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Email</label>
      <div class="col-sm-10">          
        <p><%= ticket.order.try(:email) %></p>
      </div>
    </div>
</div>